{
  "schemaVersion": 1,
  "id": "gravityguns",
  "version": "${version}",

  "name": "Gravity Guns",
  "description": "Adds gravity guns inspired by Half-Life 2. (Entry for ModFest 1.17)",
  "authors": ["leocth"],
  "license": "Apache-2.0",
  "icon": "assets/gravityguns/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.GravityGuns"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.client.GravityGunsClient"
      }
    ],
    "dynamiclights": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.client.LdlCompat"
      }
    ]
  },

  "mixins": [ "gravityguns.mixins.json" ],

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.17.x"
  }
}
