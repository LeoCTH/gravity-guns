{
  "schemaVersion": 1,
  "id": "gravityguns",
  "version": "${version}",

  "name": "Gravity Guns",
  "description": "Adds gravity guns inspired by Half-Life 2. (Entry for ModFest 1.17)",
  "authors": ["leocth"],
  "license": "Apache-2.0",
  "icon": "assets/gravityguns/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.GravityGuns"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.client.GravityGunsClient"
      }
    ],
    "dynamiclights": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.client.integration.LdlIntegration"
      }
    ],
    "modmenu": [
      {
        "adapter": "kotlin",
        "value": "com.leocth.gravityguns.client.integration.ModMenuIntegration"
      }
    ]
  },

  "mixins": [ "gravityguns.mixins.json" ],

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.6.0+kotlin.1.5.0",
    "minecraft": "1.17.x",
    "cloth-config-lite": ">=2.0.0",
    "geckolib3": ">=3.0.0",
    "rayon-core": ">=1.3.0",
    "rayon-entity": ">=1.3.0"
  },
  "recommends": {
    "modmenu": ">=2.0.2"
  }
}
